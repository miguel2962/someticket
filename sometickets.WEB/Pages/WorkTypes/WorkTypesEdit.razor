@page "/workTypes/edit/{Id:int}"
@inject NavigationManager navigationManager
@inject IRepository repository
@inject SweetAlertService sweetAlertService

<h3>Editar WorkTypes</h3>

@if (workTypes is null)
{
    <p>Cargando...</p>
}
else
{
    <WorkTypesForm @ref="workTypesForm" WorkTypes="workTypes" OnValidSubmit="Edit" ReturnAction="Return" />
}

@code {
    private WorkTypes? workTypes;
    private WorkTypesForm? workTypesForm;

    [Parameter]
    public int Id { get; set; }

    protected override async Task OnInitializedAsync()
    {
        var responseHTTP = await repository.Get<WorkTypes>($"api/workTypes/{Id}");

        if (responseHTTP.Error)
        {
            if (responseHTTP.HttpResponseMessage.StatusCode == System.Net.HttpStatusCode.NotFound)
            {
                navigationManager.NavigateTo("workTypes");
            }
            else
            {
                var messageError = await responseHTTP.GetErrorMessageAsync();
                await sweetAlertService.FireAsync("Error", messageError, SweetAlertIcon.Error);
            }
        }
        else
        {
            workTypes = responseHTTP.Response;
        }
    }

    private async Task Edit()
    {
        var responseHTTP = await repository.Put("api/workTypes", workTypes);

        if (responseHTTP.Error)
        {
            var mensajeError = await responseHTTP.GetErrorMessageAsync();
            await sweetAlertService.FireAsync("Error", mensajeError, SweetAlertIcon.Error);
        }
        else
        {
            workTypesForm!.FormPostedSuccessfully = true;
            navigationManager.NavigateTo("workTypes");
        }
    }

    private void Return()
    {
        navigationManager.NavigateTo("workTypes");
    }
}

